<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>
<br>
<%= link_to "Edit this task", edit_path(@task), class: 'btn btn-primary'%>
<br>
<br>
<%= link_to "Delete", task_path(@task), class: 'btn btn-danger',
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<br>
<br>
<%= link_to 'Back', tasks_path, class: 'btn btn-primary' %>
