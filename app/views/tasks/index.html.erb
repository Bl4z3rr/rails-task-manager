<div class="tasks-list">
<h1>My Tasks</h1>
  <%@tasks.each do |task|  %>
    <h2><%= link_to task.title, task_path(task) %></h2>
    <% if task.completed == true %>
      <input type="checkbox" checked><br>
    <% else %>
      <input type="checkbox">
    <% end %>
  <%end %>
  <br>
  <br>

  <%= link_to '+ Add a new task', new_path, class: 'btn btn-primary' %>

 </div>
